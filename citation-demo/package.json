{
  "name": "citation-demo",
  "version": "0.1.0",
  "dependencies": {
    "babel-polyfill": "^6.22.0",
    "citation-react-router": "^0.1.0",
    "react": "^15.4.0",
    "react-dom": "^15.4.0",
    "react-router": "4.0.0-beta.6",
    "react-router-dom": "4.0.0-beta.6"
  },
  "devDependencies": {
    "ava": "^0.18.2",
    "babel-cli": "^6.22.2",
    "babel-eslint": "^7.1.0",
    "babel-plugin-transform-require-ignore": "0.0.2",
    "babel-preset-es2015": "^6.18.0",
    "babel-preset-react": "^6.16.0",
    "babel-preset-react-app": "^2.0.1",
    "babel-preset-stage-2": "^6.18.0",
    "citation-react-renderer": "^0.1.0",
    "citation-server": "^0.1.0",
    "enzyme": "^2.7.1",
    "eslint": "^3.9.1",
    "eslint-config-xo": "^0.17.0",
    "eslint-config-xo-react": "^0.10.0",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jasmine": "^2.1.0",
    "eslint-plugin-react": "^6.6.0",
    "nodemon": "^1.11.0",
    "react-addons-test-utils": "^15.4.2",
    "react-scripts": "0.7.0",
    "sinon": "^1.17.7"
  },
  "scripts": {
    "start": "citation-server",
    "dev": "react-scripts start",
    "lint": "../node_modules/.bin/eslint src",
    "prettier": "../node_modules/.bin/prettier --write src/**/*.js",
    "build": "react-scripts build && npm run compile",
    "test": "NODE_ENV=development ava --verbose",
    "compile": "BABEL_ENV=production babel src -d compile --presets react-app",
    "render": "citation-render --serverUrl http://localhost:4000/graphql --components compile/components"
  },
  "ava": {
    "files": [
      "src/**/*.test.js"
    ],
    "require": [
      "babel-register"
    ],
    "babel": "inherit"
  },
  "babel": {
    "presets": [
      "react-app"
    ],
    "plugins": [
      [
        "babel-plugin-transform-require-ignore",
        {
          "extensions": [
            ".css"
          ]
        }
      ]
    ]
  }
}
